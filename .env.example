# Environment Variables - Copy to .env and fill in your own secrets
# NEVER commit .env to version control

# Groq LLM Provider (free)
# Get your key from: https://console.groq.com
GROQ_API_KEY=gsk_your_key_here_replace_me
LLM_PROVIDER=groq

# Optional: Concurrency limit for Groq requests (default: 4)
GROQ_MAX_CONCURRENT=4

# Optional: Mistral API (if switching providers)
MISTRAL_API_KEY=your_mistral_key_here

# Optional: OpenAI API (if switching providers)
OPENAI_API_KEY=your_openai_key_here

# Database (default: SQLite locally, PostgreSQL in production)
DB_TYPE=sqlite
DB_PATH=./data/email_classifier.db
# For PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ia_pme
# DB_USER=postgres
# DB_PASSWORD=your_password

# Application
APP_NAME=IA PME
DEBUG=False
LOG_LEVEL=INFO

# JWT (for authentication, change in production)
JWT_SECRET_KEY=your-secret-key-change-in-production

# Flask/Streamlit Ports (local development)
FLASK_PORT=8000
STREAMLIT_PORT=8501
